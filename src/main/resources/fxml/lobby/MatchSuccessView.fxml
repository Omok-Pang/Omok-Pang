<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.omokpang.controller.lobby.MatchSuccessController"
            prefWidth="750" prefHeight="600">

    <!-- ⭐ 배경 (매칭뷰와 동일) -->
    <ImageView fitWidth="750" fitHeight="600" preserveRatio="false"
               AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <image>
            <Image url="@/images/bg_lightmode.png" />
        </image>
    </ImageView>

    <!-- ⭐ 중앙 레이아웃 -->
    <VBox alignment="CENTER"
          spacing="25"
          prefWidth="750" prefHeight="600"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- ⭐ 제목 -->
        <Label text="매칭 성공"
               style="-fx-font-size: 44px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- ⭐ 행성 리스트 (2~4명 동적 배치) -->
        <HBox fx:id="playerBox"
              alignment="CENTER"
              spacing="30"
              prefWidth="600" prefHeight="260">
        </HBox>

        <!-- ⭐ 5초 뒤 자동 이동 안내 -->
        <Label fx:id="countdownLabel"
               text="5초 뒤에 카드 선택 화면으로 넘어갑니다."
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    </VBox>

</AnchorPane>
