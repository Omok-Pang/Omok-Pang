<?xml version="1.0" encoding="UTF-8"?>
<!--
  역할: 상대방이 Swap 카드를 사용했을 때,
       2초 정도 결과 안내를 보여주는 오버레이
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.effect.SwapNoticeController"
           fx:id="root"
           prefWidth="750" prefHeight="600"
           style="-fx-background-color: rgba(0,0,0,0.55);">

    <!-- 중앙 안내 박스 -->
    <StackPane alignment="CENTER">
        <StackPane maxWidth="520" maxHeight="260"
                   style="
                       -fx-background-color: rgba(0,0,0,0.90);
                       -fx-background-radius: 24;
                       -fx-padding: 32 40 32 40;
                   ">
            <VBox alignment="CENTER" spacing="16">
                <Label text="Swap"
                       style="
                           -fx-text-fill: #ff4d4f;
                           -fx-font-size: 28;
                           -fx-font-weight: 800;
                       "/>

                <Label text="상대방이 공격카드를 사용했습니다"
                       wrapText="true"
                       textAlignment="CENTER"
                       style="
                           -fx-text-fill: white;
                           -fx-font-size: 18;
                           -fx-font-weight: 700;
                       "/>

                <Label text="돌의 위치가 교환되었습니다."
                       wrapText="true"
                       textAlignment="CENTER"
                       style="
                           -fx-text-fill: white;
                           -fx-font-size: 18;
                           -fx-font-weight: 700;
                       "/>
            </VBox>
        </StackPane>
    </StackPane>
</StackPane>
