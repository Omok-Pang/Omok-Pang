<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane fx:id="rootOverlay"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.omokpang.controller.effect.BombNoticeController"
           alignment="BOTTOM_CENTER"
           style="-fx-background-color: transparent;">

    <!-- 아래쪽 안내 바 -->
    <VBox StackPane.alignment="BOTTOM_CENTER"
          alignment="CENTER"
          spacing="8"
          prefHeight="140"
          minHeight="140"
          maxHeight="140"
          style="-fx-background-color: rgba(0,0,0,0.75);
                 -fx-background-radius: 24;
                 -fx-padding: 20 40 20 40;">
        <Label fx:id="noticeLabel"
               text="상대방이 Bomb!! 카드를 사용했습니다.&#10;상대방이 선택한 3×3 구역이 제거됩니다."
               wrapText="true"
               style="-fx-text-fill: white;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-alignment: center;" />
    </VBox>
</StackPane>
