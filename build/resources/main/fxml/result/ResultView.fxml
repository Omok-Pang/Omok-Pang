<?xml version="1.0" encoding="UTF-8"?>
<!--
  역할: 게임 종료 결과 (모달)
  핵심기능: 순위·포인트 표시 / 다시하기·나가기
-->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.result.ResultController"
           prefWidth="750" prefHeight="600"
           style="-fx-background-color: rgba(0,0,0,0.35);">

    <!-- ===================== 중앙 모달 박스 ===================== -->
    <VBox fx:id="resultBox"
          alignment="TOP_CENTER"
          spacing="25"

          maxWidth="550" prefWidth="550"
          maxHeight="300" prefHeight="300"

          scaleX="0.75" scaleY="0.75"

          style="
            -fx-background-color: rgba(255,255,255,0.90);
            -fx-background-radius: 30;
            -fx-padding: 0 40 40 40;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 35, 0.2, 0, 6);
          "
          StackPane.alignment="CENTER">

        <!-- 결과 배너 (WIN / LOSE 이미지) -->
        <ImageView fx:id="resultBannerImg"
                   fitHeight="70"
                   preserveRatio="true"/>

        <!-- 순위 영역 -->
        <VBox fx:id="rankingBox"
              alignment="CENTER"
              spacing="20"/>

        <!-- 다시하기 / 나가기 버튼 -->
        <HBox alignment="CENTER"
              spacing="40"
              style="-fx-padding: 10;">

            <Button fx:id="retryBtn"
                    style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fx:id="retryImg" fitWidth="180" fitHeight="100"/>
                </graphic>
            </Button>

            <Button fx:id="exitBtn"
                    style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fx:id="exitImg" fitWidth="180" fitHeight="100"/>
                </graphic>
            </Button>
        </HBox>

    </VBox>
</StackPane>
