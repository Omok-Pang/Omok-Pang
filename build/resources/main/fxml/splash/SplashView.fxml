<?xml version="1.0" encoding="UTF-8"?>
<!--
  역할: 시작 화면 (배경 + START 버튼 이미지)
  핵심기능: START 클릭 → AuthView로 전환
-->
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.omokpang.controller.splash.SplashController"
            prefWidth="800" prefHeight="800">

    <ImageView
            AnchorPane.topAnchor="0"
            AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"
            preserveRatio="false"
            fitWidth="800"
            fitHeight="800">
        <image><Image url="/images/bg_start.png"/></image>
    </ImageView>

    <!-- 하단 START 버튼 -->
    <VBox alignment="BOTTOM_CENTER"
          spacing="12"
          AnchorPane.bottomAnchor="28"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Button fx:id="btnStart"
                style="-fx-background-color: transparent;"
                onAction="#handleStart">
            <graphic>
                <ImageView fitWidth="180" preserveRatio="true">
                    <image><Image url="/images/button/btn_startbtn.png"/></image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</AnchorPane>