<?xml version="1.0" encoding="UTF-8"?>
<!--
  역할: Swap 카드를 사용한 플레이어에게
       "내 돌 1개 + 상대 돌 1개 선택 후 Enter" 안내를 보여주는 오버레이
-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.effect.SwapSelectGuideController"
           fx:id="root"
           prefWidth="750" prefHeight="600"
           style="-fx-background-color: rgba(0,0,0,0.40);">

    <!-- 화면 하단 안내 박스 -->
    <StackPane alignment="BOTTOM_CENTER">
        <StackPane.margin>
            <Insets bottom="20"/>
        </StackPane.margin>

        <StackPane maxWidth="720" maxHeight="130"
                   style="
                       -fx-background-color: rgba(0,0,0,0.85);
                       -fx-background-radius: 24;
                       -fx-padding: 22 40 22 40;
                   ">
            <Label text="변경하고 싶은 자신의 돌 1개와 상대방 돌 1개를 선택 후 Enter를 눌러주세요"
                   wrapText="true"
                   textAlignment="CENTER"
                   style="
                       -fx-text-fill: white;
                       -fx-font-size: 22;
                       -fx-font-weight: 800;
                   "/>
        </StackPane>
    </StackPane>
</StackPane>
