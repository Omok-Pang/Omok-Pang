<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.effect.ShieldNoticeController"
           alignment="BOTTOM_CENTER"
           style="-fx-background-color: transparent;">

    <!-- 아래쪽 안내 바 -->
    <VBox StackPane.alignment="BOTTOM_CENTER"
          alignment="CENTER"
          spacing="8"
          prefHeight="140"
          minHeight="140"
          maxHeight="140"
          style="-fx-background-color: rgba(0,0,0,0.75);
                 -fx-background-radius: 24;
                 -fx-padding: 20 40 20 40;">
        <Label fx:id="titleLabel"
               text="Shield"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #55aaff;" />

        <Label fx:id="messageLabel"
               text="상대방이 공격카드를 사용했습니다. 방패 카드가 자동 발동했습니다."
               wrapText="true"
               style="-fx-text-fill: white;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-alignment: center;" />
    </VBox>
</StackPane>