<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/17.0.2"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.effect.DoubleMoveNoticeController"
           pickOnBounds="false">

    <children>
        <!-- 화면 전체를 덮지만 클릭은 아래로 통과 (pickOnBounds=false) -->
        <AnchorPane pickOnBounds="false">
            <children>
                <!-- 화면 아래쪽에 깔리는 배너 -->
                <HBox spacing="8"
                      alignment="CENTER"
                      AnchorPane.leftAnchor="40.0"
                      AnchorPane.rightAnchor="40.0"
                      AnchorPane.bottomAnchor="40.0"
                      style="-fx-background-color: rgba(0,0,0,0.65);
                             -fx-background-radius: 16;">
                    <padding>
                        <Insets top="10" right="16" bottom="10" left="16"/>
                    </padding>

                    <Label fx:id="messageLabel"
                           text="두 번 두기 카드가 사용되었습니다."
                           style="-fx-text-fill: white;
                                  -fx-font-size: 16;
                                  -fx-font-weight: bold;"/>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
