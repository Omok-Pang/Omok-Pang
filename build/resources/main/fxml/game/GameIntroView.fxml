<?xml version="1.0" encoding="UTF-8"?>
<!--
  역할: 선공/후공 안내
  핵심기능: 현재 선/후공 문구 표시 / 5초 카운트다운 후 본 게임으로 전환
-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.omokpang.controller.game.GameIntroController"
           prefWidth="750" prefHeight="600">

    <!-- 배경 이미지 -->
    <children>
        <ImageView fitWidth="750" fitHeight="600" preserveRatio="false">
            <image>
                <Image url="/images/bg_lightmode.png"/>
            </image>
        </ImageView>

        <!-- 가운데 내용 -->
        <VBox spacing="18" alignment="CENTER">
            <padding>
                <Insets top="40" right="24" bottom="24" left="24"/>
            </padding>

            <!-- 제목: 로고 이미지 -->
            <ImageView fitWidth="260" preserveRatio="true">
                <image>
                    <Image url="/images/logo.png"/>
                </image>
            </ImageView>

            <!-- 설명 문구: 중앙 정렬 -->
            <Label text="자신의 프로필이 선택되면 돌을 놓아주세요. 제한시간은 20초입니다."
                   wrapText="true"
                   maxWidth="520"
                   alignment="CENTER"
                   textAlignment="CENTER"
                   style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: 700; -fx-opacity:0.95;"/>

            <!-- 선공/후공 안내 -->
            <Label fx:id="firstPlayerLabel" text="당신이 선공입니다!"
                   style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: #ffe08a;"/>

            <!-- 카운트다운 텍스트 (예: 5초 뒤에 시작합니다.) -->
            <Label fx:id="countdownLabel"
                   text="5초 뒤에 시작합니다."
                   style="-fx-font-size: 18; -fx-text-fill: white; -fx-font-weight: 700;"/>
        </VBox>
    </children>
</StackPane>
